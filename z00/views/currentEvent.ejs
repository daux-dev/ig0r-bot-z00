<% if (current) { %>
    <form action="/update" method="post">
        <div class="col-12 mb-1">
            <div class="row align-items-center rounded">
                <div class="field col-1 id">#<%= current.event_id  %></div>
                <div class="field col-4 name"><%= current.event_title  %></div>
                <div class="field col-4">
                    <div><%= current.event_date.replace(/-/g, ".") %>, <%= current.event_time %> </div>
